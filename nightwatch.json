  "globals_path": "./.selenium/globals.js",

  "selenium": {
    "start_process": false,
    "server_path": "",
    "log_path": "",
    "port": 4444,
    "host": "127.0.0.1",
    "cli_args": {
      "webdriver.chrome.driver": "./.selenium/chromedriver",
      "webdriver.gecko.driver": "./.selenium/geckodriver",
      "webdriver.edge.driver": ""
